@model IEnumerable<SchoolApp.Web.Models.TaskJornal>
@{
    ViewData["Title"] = "Админ";
}

<h3 class="hidden-xs">Панель администратора</h3>

<div class="table-responsive -sm">
    <table class="table table-hover table-reflow">
        <thead>
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Cabinet)</th>
                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.States.Name)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr title="@Html.DisplayFor(modelItem => item.Fio)" data-toggle="popover" data-content="@Html.DisplayFor(modelItem => item.Text)">
                <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Cabinet)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.States.Name)</td>
                <td>@Html.ActionLink("", "Execution", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" })</td>
            </tr>
            }
        </tbody>
    </table>
</div>


